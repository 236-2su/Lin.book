<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LinBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">#333333</item>
    </style>

    <style name="Theme.LinBook" parent="Base.Theme.LinBook" />

    <!-- Splash 화면 전용 테마 (Android 11 이하에서도 배경을 앱 스플래시 색상과 일치) -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">#8FC1FF</item>
        <item name="android:statusBarColor">#8FC1FF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>