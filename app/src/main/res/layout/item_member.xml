<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 아이템 1 - Me (파란색 배지) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 윗줄: 배지와 가입일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- 배지들 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Me 배지 -->
                <TextView
                    style="@style/ReferenceSmallButton.Me"
                    android:text="Me"
                    android:layout_marginEnd="8dp" />

                <!-- 회장 배지 -->
                <TextView
                    style="@style/ReferenceSmallButton.President"
                    android:text="회장" />
            </LinearLayout>

            <!-- 가입일 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입일: 2023년 03월 02일"
                android:textSize="12sp"
                android:textColor="#9CA3AF" />
        </LinearLayout>

        <!-- 아랫줄: 이름, 전공, 학번, 전화번호 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김쌔피"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컴퓨터공학과"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2313545"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="010-0000-0000"
                android:textSize="14sp"
                android:textColor="#6B7280" />
        </LinearLayout>
    </LinearLayout>

    <!-- 아이템 2 - 부회장 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- 왼쪽 영역: 구성원 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 윗줄: 배지와 가입일 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- 부회장 배지 -->
                <TextView
                    style="@style/ReferenceSmallButton.VicePresident"
                    android:text="부회장" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 가입일 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가입일: 2024년 04월 27일"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF" />
            </LinearLayout>

            <!-- 아랫줄: 이름과 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 이름 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김철수"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginEnd="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 전공/학번, 전화번호 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소프트웨어공학과 / 2023124"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-0000-0000"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 가운데 영역: 권한 변경 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권한 변경"
            android:textSize="14sp"
            android:textColor="#3B82F6"
            android:layout_marginHorizontal="16dp" />

        <!-- 오른쪽 영역: 액션 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/call"
                android:layout_marginEnd="8dp"
                android:padding="8dp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/text"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 아이템 3 - 일반 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- 왼쪽 영역: 구성원 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 윗줄: 배지와 가입일 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 일반 배지 -->
                <TextView
                    style="@style/ReferenceSmallButton.General"
                    android:text="일반" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 가입일 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가입일: 2025년 03월 27일"
                    android:textColor="#9CA3AF"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 아랫줄: 이름과 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 이름 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="윤예진"
                    android:textColor="#1F2937"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 전공/학번, 전화번호 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인공지능융합학과 / 2023256"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="010-0000-0000"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 가운데 영역: 권한 변경 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="권한 변경"
            android:textColor="#3B82F6"
            android:textSize="14sp" />

        <!-- 오른쪽 영역: 액션 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:src="@drawable/call" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="8dp"
                android:src="@drawable/text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>