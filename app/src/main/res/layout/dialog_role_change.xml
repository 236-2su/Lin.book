<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권한 변경"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="멤버 이름"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/radioGroup_roles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_leader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회장"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_officer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="간부"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="일반 부원"
            android:textSize="16sp" />

    </RadioGroup>

    <!-- 경고 메시지 -->
    <LinearLayout
        android:id="@+id/warning_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/warning_background"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠️"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회장 권한을 부여하면 현재 회장은 일반 멤버가 됩니다."
            android:textSize="12sp"
            android:textColor="#92400E"
            android:fontFamily="sans-serif" />
    </LinearLayout>

</LinearLayout>