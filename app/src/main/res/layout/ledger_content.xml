<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

    <!-- 날짜 선택 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
                 android:paddingTop="8dp"
         android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/btn_prev_month"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08월"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_next_month"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward" />
    </LinearLayout>

         <!-- 재무 요약 카드 -->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
                          android:background="@drawable/card_box_fafa"
                 android:orientation="vertical"
                 android:paddingStart="4dp"
                 android:paddingEnd="4dp"
                 android:paddingTop="24dp"
                 android:paddingBottom="24dp"
         android:layout_marginStart="8dp"
         android:layout_marginEnd="8dp"
                   android:layout_marginTop="8dp"
         android:layout_marginBottom="16dp"
         android:elevation="4dp"
         android:translationZ="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 총 자산 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                                                  <TextView
                     android:id="@+id/tv_total_assets"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="총 자산"
                     android:textSize="12sp"
                     android:textColor="#000000"
                     android:layout_marginBottom="4dp"/>

                 <TextView
                     android:id="@+id/tv_total_assets_amount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0원"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:textColor="#000000"
                     android:layout_marginBottom="4dp"/>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center"
                     android:layout_marginTop="4dp">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="전월 대비"
                         android:textSize="10sp"
                         android:textColor="#6F6F6F"/>

                     <TextView
                         android:id="@+id/tv_assets_change"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="▼ 0"
                         android:textSize="10sp"
                         android:textColor="#C50000"
                         android:layout_marginStart="4dp"/>

                 </LinearLayout>

            </LinearLayout>

            <!-- 당월 수입 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                                                  <TextView
                     android:id="@+id/tv_monthly_income"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="당월 수입"
                     android:textSize="12sp"
                     android:textColor="#000000"
                     android:layout_marginBottom="4dp"/>

                 <TextView
                     android:id="@+id/tv_monthly_income_amount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0원"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:textColor="#2457C5"
                     android:layout_marginBottom="4dp"/>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center"
                     android:layout_marginTop="4dp">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="전월 대비"
                         android:textSize="10sp"
                         android:textColor="#6F6F6F"/>

                     <TextView
                         android:id="@+id/tv_income_change"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="▲ 0"
                         android:textSize="10sp"
                         android:textColor="#2457C5"
                         android:layout_marginStart="4dp"/>

                 </LinearLayout>

            </LinearLayout>

            <!-- 당월 지출 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                                                  <TextView
                     android:id="@+id/tv_monthly_expense"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="당월 지출"
                     android:textSize="12sp"
                     android:textColor="#000000"
                     android:layout_marginBottom="4dp"/>

                 <TextView
                     android:id="@+id/tv_monthly_expense_amount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0원"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:textColor="#C50000"
                     android:layout_marginBottom="4dp"/>

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center"
                     android:layout_marginTop="4dp">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="전월 대비"
                         android:textSize="10sp"
                         android:textColor="#6F6F6F"/>

                     <TextView
                         android:id="@+id/tv_expense_change"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="▼ 0"
                         android:textSize="10sp"
                         android:textColor="#C50000"
                         android:layout_marginStart="4dp"/>

                 </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <!-- 거래 내역 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_ledger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>