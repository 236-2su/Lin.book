<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 내 동아리 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 동아리"
                style="@style/SectionTitleTextStyle"
                android:layout_marginBottom="12dp"/>
                
            <!-- 임시 루트 페이지 이동 버튼 -->
            <Button
                android:id="@+id/btn_temp_root"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="루트 페이지"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:layout_marginTop="-44dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <!-- 내 동아리: RecyclerView + PagerSnapHelper로 한 장씩 스와이프 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_club_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"/>

            <!-- 페이지 표시 (하나의 카드만 있으므로 점 하나만) -->
            <LinearLayout
                android:id="@+id/page_indicators_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp">
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/page_indicator_selected"/>
            </LinearLayout>

            <!-- 카테고리 버튼 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/btn_all"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_selected"
                        android:textColor="#FFFFFF"
                        android:text="전체" />

                    <TextView
                        android:id="@+id/btn_academic"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="학술" />

                    <TextView
                        android:id="@+id/btn_sports"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="체육" />

                    <TextView
                        android:id="@+id/btn_culture_art"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="문화예술" />

                    <TextView
                        android:id="@+id/btn_volunteer"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="봉사" />

                    <TextView
                        android:id="@+id/btn_startup"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="창업" />

                    <TextView
                        android:id="@+id/btn_religion"
                        style="@style/ReferenceBoardButton"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="8dp"
                        android:text="종교" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- 동아리 목록 -->
            <LinearLayout
                android:id="@+id/club_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 동적으로 생성된 동아리 카드들이 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
