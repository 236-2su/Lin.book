<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 헤더: 공지 리스트와 동일 구성 -->
        <!-- 뒤로가기 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_vertical">


            <Button
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:backgroundTint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="&lt;"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:clickable="true"
                android:focusable="true" />
            
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo"
                android:id="@+id/iv_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_club_title"
                android:text=""
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_member"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:backgroundTint="#FFFFFF"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_person"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:padding="6dp"
                android:contentDescription="멤버 관리" />
        </LinearLayout>

        <!-- 게시판 버튼 영역 -->

        <LinearLayout
            android:id="@+id/board_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <!-- 게시판 버튼들 -->
            <HorizontalScrollView
                android:id="@+id/board_buttons_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_notice"
                        style="@style/ReferenceBoardButton"
                        android:text="공지사항" />

                    <TextView
                        android:id="@+id/btn_free_board"
                        style="@style/ReferenceBoardButton"
                        android:text="자유게시판" />

                    <TextView
                        android:id="@+id/btn_public_account"
                        style="@style/ReferenceBoardButton"
                        android:text="공개장부" />

                    <TextView
                        android:id="@+id/btn_event_account"
                        style="@style/ReferenceBoardButton"
                        android:text="행사장부" />

                    <TextView
                        android:id="@+id/btn_meeting_account"
                        style="@style/ReferenceCategoryButton.Selected"
                        android:text="모임통장" />

                    <TextView
                        android:id="@+id/btn_ai_report"
                        style="@style/ReferenceBoardButton"
                        android:text="AI 리포트" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 계좌 정보 카드 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_box_gray"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pushpin"
                        app:tint="#D32F2F"
                        android:rotation="45"
                        android:contentDescription="@null"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="계좌 정보"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginStart="8dp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_account_visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="계좌번호"
                            android:textSize="16sp"
                            android:textColor="#111111"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_account_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000-000-000-00"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="예금주명"
                            android:textSize="16sp"
                            android:textColor="#111111"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_holder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="박싸피"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="은행명"
                            android:textSize="16sp"
                            android:textColor="#111111"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="싸피은행"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

                <!-- 월 선택 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/btn_prev_month"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="#333333"
                        android:contentDescription="@null"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2025년"
                            android:textSize="16sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/tv_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08월"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="#000000"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_next_month"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#333333"
                        android:contentDescription="@null"/>
                </LinearLayout>

            <!-- 요약 카드: 총 자산 / 당월 수입 / 당월 지출 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_box_fafa"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 자산"
                        android:textColor="#666666"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_total_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,289,000원"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv_total_diff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전월 대비 ▼125,000"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당월 수입"
                        android:textColor="#666666"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_month_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100,000원"
                        android:textStyle="bold"
                        android:textColor="#2457C5"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv_month_income_diff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전월 대비 ▲125,000"
                        android:textColor="#2457C5"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당월 지출"
                        android:textColor="#666666"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_month_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25,000원"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/tv_month_expense_diff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전월 대비 ▼10,000"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

                <!-- 내역 리스트(샘플) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp">

                <!-- 날짜 헤더 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 08월 20일 수요일 10:25"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <!-- 아이템 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:layout_marginBottom="8dp"
                    android:background="#00000000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="김싸피"
                            android:textColor="#111111"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 20,000원"
                            android:textColor="#2457C5"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,289,000원"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="8dp"/>

                <!-- 다른 샘플 아이템 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 08월 04일 월요일 10:25"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="(주)다이소 녹산공단점"
                            android:textColor="#111111"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- 15,000원"
                            android:textColor="#D32F2F"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,279,000원"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>