                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/color_box_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- 총 예산 -->
                    <LinearLayout
