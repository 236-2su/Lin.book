<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 날짜 네비게이션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btn_prev_item"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/tv_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08월 14일"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" />

            <ImageView
                android:id="@+id/btn_next_item"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- 거래 타입 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/btn_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지출"
                android:textSize="10sp"
                android:textColor="#B70000"
                android:background="@drawable/btn_expense_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btn_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수입"
                android:textSize="10sp"
                android:textColor="#2457C5"
                android:background="@drawable/btn_income_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btn_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소모품비"
                android:textSize="10sp"
                android:textColor="#333333"
                android:background="@drawable/btn_general"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- 거래 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <!-- 날짜 및 시간 -->
            <TextView
                android:id="@+id/tv_transaction_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년 08월 13일 수요일 15:23"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end" />

            <!-- 금액 -->
            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 10,000원"
                android:textSize="18sp"
                android:textColor="#C50000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_gravity="end" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp" />

            <!-- 영수증 이미지 -->
            <LinearLayout
                android:id="@+id/receipt_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영수증"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    
                    <ImageView
                        android:id="@+id/iv_receipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:background="@drawable/comment_background"
                        android:padding="8dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="300dp"
                        android:maxHeight="300dp"
                        android:minWidth="200dp"
                        android:minHeight="200dp" />
                        
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <!-- 영수증 아래 구분선 -->
            <View
                android:id="@+id/receipt_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- 거래 상세 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_vendor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="거래처명: (주)다이소 녹산공단점"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="end"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="결제수단: 카드결제(체크카드)"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="end"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메모 : 동아리실 내 비품(청소용품) 구입"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- 메모와 댓글 사이 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- 댓글 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- 댓글 입력 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/comment_input_background"
                android:padding="12dp">

                <EditText
                    android:id="@+id/et_comment_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="댓글을 입력해주세요"
                    android:textSize="14sp"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:background="@null"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:maxLines="1"
                    android:inputType="text" />

                <ImageView
                    android:id="@+id/btn_send_comment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_send_white_blue"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
