<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 날짜 네비게이션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/btn_prev_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/tv_current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08월 14일"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <ImageView
            android:id="@+id/btn_next_item"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- 거래 타입 및 액션 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"> <!-- 좌우 여백 제거 -->

        <!-- 거래 타입 버튼들 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지출"
                android:textSize="10sp"
                android:textColor="#B70000"
                android:background="@drawable/btn_expense_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btn_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수입"
                android:textSize="10sp"
                android:textColor="#2457C5"
                android:background="@drawable/btn_income_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/btn_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소모품비"
                android:textSize="10sp"
                android:textColor="#333333"
                android:background="@drawable/btn_general"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- 액션 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정하기"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_edit"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제하기"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_delete"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- 거래 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"> <!-- 좌우 여백 제거 -->

        <!-- 날짜 및 시간 -->
        <TextView
            android:id="@+id/tv_transaction_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 08월 13일 수요일 15:23"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp"
            android:layout_gravity="end" /> <!-- 오른쪽 정렬 -->

        <!-- 금액 -->
        <TextView
            android:id="@+id/tv_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 10,000원"
            android:textSize="18sp"
            android:textColor="#C50000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end" /> <!-- 오른쪽 정렬 -->

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- 영수증 이미지 -->
        <LinearLayout
            android:id="@+id/receipt_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영수증"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/iv_receipt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/comment_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- 영수증 아래 구분선 -->
        <View
            android:id="@+id/receipt_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- 거래 상세 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_vendor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="거래처명: (주)다이소 녹산공단점"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제수단: 카드결제(체크카드)"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메모 : 동아리실 내 비품(청소용품) 구입"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="end" />
                 </LinearLayout>
     </LinearLayout>

     <!-- 메모와 댓글 사이 구분선 -->
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#E0E0E0"
         android:layout_marginBottom="24dp" />

     <!-- 댓글 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="24dp"> <!-- 좌우 여백 제거 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글(1)"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

                 <!-- 댓글 목록 -->
         <LinearLayout
             android:id="@+id/comment_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginBottom="16dp">

             <!-- 댓글 아이템 -->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:padding="16dp"
                 android:layout_marginBottom="12dp">

                 <!-- 댓글 내용 (왼쪽) -->
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="vertical">

                     <!-- 이름과 학과 (한 줄에) -->
                     <TextView
                         android:id="@+id/tv_comment_author"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="이재익 15학번 기계공학"
                         android:textSize="14sp"
                         android:textColor="#333333"
                         android:textStyle="bold"
                         android:layout_marginBottom="4dp" />

                     <!-- 날짜 -->
                     <TextView
                         android:id="@+id/tv_comment_date"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="2025.08.19(화) 02:33"
                         android:textSize="12sp"
                         android:textColor="#666666"
                         android:layout_marginBottom="8dp" />

                     <!-- 댓글 내용 -->
                     <TextView
                         android:id="@+id/tv_comment_content"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="청소 용품 잘 사용하고 있어요!"
                         android:textSize="14sp"
                         android:textColor="#333333" />
                 </LinearLayout>

                 <!-- 좋아요 하트 (오른쪽) -->
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center_vertical"
                     android:layout_marginStart="16dp">

                     <ImageView
                         android:id="@+id/iv_heart"
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/ic_heart_outline"
                         android:clickable="true"
                         android:focusable="true"
                         android:layout_marginEnd="4dp" />

                     <TextView
                         android:id="@+id/tv_like_count"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="1"
                         android:textSize="12sp"
                         android:textColor="#666666" />
                 </LinearLayout>
             </LinearLayout>
         </LinearLayout>

        <!-- 댓글 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/comment_input_background"
            android:padding="12dp">

            <EditText
                android:id="@+id/et_comment_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="댓글을 입력해주세요"
                android:textSize="14sp"
                android:textColorHint="#999999"
                android:textColor="#333333"
                android:background="@null"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:maxLines="1"
                android:inputType="text" />

            <ImageView
                android:id="@+id/btn_send_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_send_white_blue"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
