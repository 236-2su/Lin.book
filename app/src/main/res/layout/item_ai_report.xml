<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="2dp"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 상단: 리포트 타입 배지 + 날짜 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- 리포트 타입 배지 -->
        <TextView
            android:id="@+id/tv_report_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재정분석"
            android:textSize="11sp"
            android:textColor="#4CAF50"
            android:background="#E8F5E8"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 생성 날짜 -->
        <TextView
            android:id="@+id/tv_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 12월 20일"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- 리포트 제목 -->
    <TextView
        android:id="@+id/tv_report_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024년 12월 AI 재정 분석 리포트"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- 리포트 미리보기 -->
    <TextView
        android:id="@+id/tv_report_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📊 2024년 12월 AI 재정 분석 리포트\n\n💰 재정 현황 요약\n• 총 수입: 1,500,000원\n• 총 지출: 900,000원..."
        android:textSize="13sp"
        android:textColor="#555555"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="12dp" />

    <!-- 하단: AI 아이콘 + 생성자 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- AI 아이콘 -->
        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/btn_selected"
            android:backgroundTint="#E3F2FD"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI"
                android:textSize="8sp"
                android:textColor="#1565C0"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />
                
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 시스템"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 삭제 버튼 -->
        <TextView
            android:id="@+id/btn_delete_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textSize="11sp"
            android:textColor="#F44336"
            android:fontFamily="sans-serif-medium"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />
        
        <!-- 더보기 표시 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히 보기 >"
            android:textSize="11sp"
            android:textColor="#1565C0"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="12dp" />

</LinearLayout>
