        </LinearLayout>

    </LinearLayout>

    <!-- 연동하기 버튼 -->
    <LinearLayout
        android:id="@+id/btn_link"
        style="@style/ReferenceCardButton.Link"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/connection"
            android:layout_marginBottom="12dp"
            android:rotation="-45" />

        <TextView
            style="@style/ReferenceLikeCommentText"
            android:text="연동하기" />

    </LinearLayout>

    <!-- 개설하기 버튼 -->
    <LinearLayout
        android:id="@+id/btn_create"
        style="@style/ReferenceCardButton.Create">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/account"
            android:layout_marginBottom="12dp" />

        <TextView
            style="@style/ReferenceLikeCommentText"
            android:text="개설하기" />

    </LinearLayout>

</LinearLayout>