<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 메인 콘텐츠 영역 -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/comment_input_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="30dp">

            <!-- 날짜 선택 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/btn_prev_day"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_arrow_back" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp">

                    <TextView
                        android:id="@+id/tv_month_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08월"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_day_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14일"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_next_day"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_arrow_forward" />
            </LinearLayout>

            <!-- 태그 및 버튼 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/tags_container_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">
                    <!-- 태그는 Adapter에서 동적으로 추가 -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btn_edit"
                        style="@style/ReferenceSmallButton.Edit"
                        android:text="수정하기" />
                    <TextView
                        android:id="@+id/btn_delete"
                        style="@style/ReferenceSmallButton.Delete"
                        android:text="삭제하기" />
                </LinearLayout>
            </RelativeLayout>

            <!-- 거래 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginBottom="32dp">
                <TextView
                    android:id="@+id/tv_full_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 08월 13일 수요일 15:23"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv_amount_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- 10,000원"
                    android:textColor="#C50000"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv_author_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 작성자 : 김싸피"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 영수증 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/receipt_placeholder"
                android:adjustViewBounds="true"
                android:layout_marginBottom="32dp"/>

            <!-- 거래 상세 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginBottom="32dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 거래처명: (주)다이소 녹산공단점"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 결제수단: 카드결제(체크카드)"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 메모 : 동아리실 내 비품(청소용품) 구입"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- 댓글 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글(1)"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>
                
                <!-- 댓글 아이템 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:id="@+id/iv_comment_profile"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/profile_placeholder"
                        android:layout_marginEnd="16dp"/>
                    <LinearLayout
                        android:layout_toEndOf="@id/iv_comment_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이재익 15학번 기계공학"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2025. 08. 19(화) 02:33"
                            android:textColor="#888888"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="청소 용품 잘 사용하고 있어요!"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/iv_comment_heart"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_heart_outline"
                            android:layout_marginEnd="6dp"/>
                        <TextView
                            android:id="@+id/tv_comment_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#666666"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 댓글 입력창 (화면 하단 고정) -->
    <LinearLayout
        android:id="@+id/comment_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/comment_input_background"
            android:hint="댓글을 입력해주세요"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:padding="16dp"
            android:maxLines="3"
            android:minHeight="48dp"
            android:inputType="textMultiLine"
            android:gravity="top|start"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_send_white_blue"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</RelativeLayout>
