<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 상단 행사 정보 카드 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:background="@drawable/color_box_blue"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025 상반기 부경대학교 가을 축제 부스 운영"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="3.3dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="행사 예정 기간: 2025. 09. 01. ~ 09. 03."
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

    <!-- 월별 네비게이션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_prev_month"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="&lt;"
            android:textSize="18sp"
            android:textColor="#666666"
            android:background="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년"
                android:textSize="10.7sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_current_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08월"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_next_month"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="&gt;"
            android:textSize="18sp"
            android:textColor="#666666"
            android:background="@null" />

    </LinearLayout>

    <!-- 수정/삭제 버튼 추가 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginBottom="16dp">

        <TextView
            style="@style/ReferenceSmallButton.Edit"
            android:text="수정하기" />

        <TextView
            style="@style/ReferenceSmallButton.Delete"
            android:text="삭제하기" />
    </LinearLayout>

    <!-- 예산 요약 섹션 (하나의 박스) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/color_box_gray"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 총 예산 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 예산"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="3.3dp" />

            <TextView
                android:id="@+id/tv_total_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500,000원"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            />

        <!-- 현재 지출 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 지출"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="3.3dp" />

            <TextView
                android:id="@+id/tv_current_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25,000원"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF0000" />

        </LinearLayout>

    </LinearLayout>

    <!-- 거래 내역 리스트 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 거래 아이템 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <!-- 태그들 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지출"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회비"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025 상반기 부경대학교 가을 축제 ..."
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:maxWidth="150dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <!-- 거래 정보 (세로 정렬) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025년 08월 20일 수요일 10:25"
                    android:textSize="10.7sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 20,000원"
                    android:textSize="15.3sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="8dp" />

                <!-- 작성자 및 메모 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 작성자 : 김XX"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 메모: 신입 동아리원 박XX피 연간 동아리 회비"
                    android:textSize="12sp"
                    android:textColor="#888888" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <!-- 거래 아이템 2 (동일한 구조) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지출"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회비"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025 상반기 부경대학교 가을 축제 ..."
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:maxWidth="150dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025년 08월 20일 수요일 10:25"
                    android:textSize="10.7sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 20,000원"
                    android:textSize="15.3sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 작성자 : 김XX"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 메모: 신입 동아리원 박XX피 연간 동아리 회비"
                    android:textSize="12sp"
                    android:textColor="#888888" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <!-- 거래 아이템 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지출"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="회비"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025 상반기 부경대학교 가을 축제 ..."
                        android:textSize="12sp"
                        android:textColor="#333333"
                        android:background="@drawable/btn_delete_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:maxWidth="150dp"
                        android:ellipsize="end"
                        android:maxLines="1" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025년 08월 20일 수요일 10:25"
                    android:textSize="10.7sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 20,000원"
                    android:textSize="15.3sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 작성자 : 김XX"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 메모: 신입 동아리원 박XX피 연간 동아리 회비"
                    android:textSize="12sp"
                    android:textColor="#888888" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
