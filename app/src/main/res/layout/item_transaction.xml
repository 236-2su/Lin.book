<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:layout_marginBottom="8dp"
    android:background="#00000000">

    <!-- 거래 내역 아이템 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 날짜와 시간 표시 -->
        <TextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025년 08월 20일 수요일 10:25"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_transaction_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="거래내역"
                android:textColor="#111111"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 20,000원"
                android:textColor="#2457C5"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_transaction_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1,289,000원"
            android:textColor="#666666"
            android:textSize="16sp"
            android:gravity="end"
            android:layout_marginTop="8dp"/>

        <!-- 거래 메모가 있는 경우 표시 -->
        <TextView
            android:id="@+id/tv_transaction_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메모 내용"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>
    </LinearLayout>
    
    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="8dp"/>
</LinearLayout>
