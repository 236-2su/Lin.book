<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ledger_report_gradient_background">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI 리포트 생성"
            android:textSize="22sp"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맞춤형 분석 리포트를 생성해보세요"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- 폼 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="24dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 리포트명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리포트명"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_report_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="리포트명을 입력하세요"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/btn_unselected"
                android:layout_marginBottom="24dp"
                android:textColorHint="#CCCCCC"
                android:textColor="#333333" />


            <!-- 분석 리포트 종류 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분석 리포트 종류"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- 드롭다운 -->
            <LinearLayout
                android:id="@+id/dropdown_report_type"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/btn_unselected"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_selected_report_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="리포트 분석 종류를 선택하세요"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

            <!-- 생성하기 버튼 -->
            <Button
                android:id="@+id/btn_create_report"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="AI 리포트 생성하기"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/btn_register_blue"
                android:elevation="2dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>