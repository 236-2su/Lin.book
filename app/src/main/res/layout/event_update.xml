<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 페이지 제목 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/write"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행사 장부 수정"
                android:textSize="17.3sp"
                android:textStyle="bold"
                android:textColor="#1F2937" />

        </LinearLayout>

        <!-- 입력 필드 섹션을 감싸는 컨테이너 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- 행사명 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행사명"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_event_name"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="행사명을 입력하세요."
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/info_box"
                android:layout_marginBottom="24dp" />

            <!-- 행사 시작 일자 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행사 시작일자"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_start_date"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="0000.00.00."
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/info_box"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="24dp" />

            <!-- 행사 종료 일자 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행사 종료일자"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_end_date"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="0000.00.00."
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/info_box"
                android:inputType="date"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginBottom="24dp" />

            <!-- 예산 금액 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예산 금액"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_budget"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="예산 금액을 입력하세요."
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/info_box"
                android:inputType="number"
                android:layout_marginBottom="24dp" />

            <!-- 메모 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모 (선택)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_memo"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:hint="메모를 입력하세요."
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/info_box" />

        </LinearLayout>

        <!-- 하단 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 취소 버튼 (1/3) -->
            <TextView
                android:id="@+id/btn_cancel"
                style="@style/ReferenceRegisterButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="취소"
                android:background="@drawable/btn_unselected"
                android:textColor="#333333" />

            <!-- 생성하기 버튼 (2/3) -->
            <TextView
                android:id="@+id/btn_create"
                style="@style/ReferenceRegisterButton"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="수정하기" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>