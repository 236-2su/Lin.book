<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp">

        <!-- 뒤로가기 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-light"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="&lt;"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_club_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 게시판 버튼 영역 -->

        <LinearLayout
            android:id="@+id/board_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!-- 게시판 버튼들 -->
            <HorizontalScrollView
                android:id="@+id/board_buttons_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_notice"
                        style="@style/ReferenceBoardButton"
                        android:text="공지사항" />

                    <TextView
                        android:id="@+id/btn_free_board"
                        style="@style/ReferenceBoardButton"
                        android:text="자유게시판" />

                    <TextView
                        android:id="@+id/btn_public_account"
                        style="@style/ReferenceBoardButton"
                        android:text="공개장부" />

                    <TextView
                        android:id="@+id/btn_event_account"
                        style="@style/ReferenceCategoryButton.Selected"
                        android:text="행사장부" />

                    <TextView
                        android:id="@+id/btn_meeting_account"
                        style="@style/ReferenceBoardButton"
                        android:text="모임통장" />

                    <TextView
                        android:id="@+id/btn_ai_report"
                        style="@style/ReferenceBoardButton"
                        android:text="AI 리포트" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <!-- 행사 생성 폼 -->
        <include
            layout="@layout/event_create"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"/>
    </LinearLayout>

</FrameLayout>