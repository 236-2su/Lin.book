<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center_vertical">

    <!-- 왼쪽 영역: 구성원 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- 윗줄: 배지와 가입일 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- 배지들을 담는 LinearLayout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <!-- Me 배지 (본인인 경우만 표시) -->
                <TextView
                    android:id="@+id/meBadge"
                    style="@style/ReferenceSmallButton.Me"
                    android:text="Me"
                    android:layout_marginEnd="6dp"
                    android:visibility="gone" />
                
                <!-- 역할 배지 (회장/일반) -->
                <TextView
                    android:id="@+id/roleBadge"
                    style="@style/ReferenceSmallButton.General"
                    android:text="일반" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 가입일 -->
            <TextView
                android:id="@+id/joinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입일: 2025년 03월 27일"
                android:textSize="12sp"
                android:textColor="#9CA3AF" />
        </LinearLayout>

        <!-- 아랫줄: 이름과 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 이름 -->
            <TextView
                android:id="@+id/memberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="윤예진"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginEnd="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 전공/학번, 전화번호 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/memberInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인공지능융합학과 / 2023256"
                    android:textSize="12sp"
                    android:textColor="#6B7280" />

                <TextView
                    android:id="@+id/memberPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="010-0000-0000"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 가운데 영역: 권한 변경 (Me가 아닌 경우만 표시) -->
    <TextView
        android:id="@+id/roleChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="권한 변경"
        android:textSize="14sp"
        android:textColor="#3B82F6"
        android:layout_marginHorizontal="16dp"
        android:visibility="visible" />

    <!-- 오른쪽 영역: 액션 버튼들 (Me가 아닌 경우만 표시) -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/callButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/call"
            android:layout_marginEnd="8dp"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/messageButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/text"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>