            android:id="@+id/ledger_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 아이템 1 - 파란색 -->
            <LinearLayout
                android:id="@+id/event_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:background="@drawable/color_box_blue"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025 상반기 부경대학교 가을 축제 부스 운영"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="3.3dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="행사 예정 기간: 2025. 09. 01. ~ 09. 03."
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center" />

