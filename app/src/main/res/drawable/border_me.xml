<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Me 배지와 같은 파란색 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#3B82F6" />
    
    <!-- 모서리 둥글게 -->
    <corners android:radius="8dp" />
    
    <!-- 배경색 연한 파란색 -->
    <solid android:color="#F3F7FF" />
    
    <!-- 내부 패딩 - item_single_member.xml의 padding과 동일하게 설정 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>