<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer gradient border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#FF6FB1"
                android:endColor="#FFD86F"
                android:angle="45" />
        </shape>
    </item>
    <!-- Inner white background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFFFF" />
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp" />
        </shape>
    </item>
</layer-list>


