<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 말풍선 본체 -->
    <item android:bottom="16dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="20dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- 꼬리: 다이아몬드 형태(회전한 정사각형), 오른쪽 하단 -->
    <!-- 꼬리: 세로 막대 + 삼각형 벡터 -->
    <item
        android:gravity="bottom|end"
        android:right="18dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <size android:width="2dp" android:height="20dp" />
            <solid android:color="#000000" />
        </shape>
    </item>
    <item
        android:gravity="bottom|end"
        android:right="11dp"
        android:bottom="0dp"
        android:drawable="@drawable/ic_tooltip_tail_triangle"/>
</layer-list>

