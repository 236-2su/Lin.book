<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ledger_report_gradient_background">

    <!-- 헤더 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Hey-Bi 로고 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="12dp" />

        <!-- 헤더 텍스트 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;짱구네 코딩&quot; AI 비서 "
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey-Bi"
                android:textSize="20sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

    </LinearLayout>

    <!-- 정보 배너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/color_box_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <!-- AI 아이콘 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ai_icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hey-Bi가 분석한 우리 동아리의 AI 리포트입니다!"
            android:textSize="14sp"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 리포트 생성 정보 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025. 08. 19(월) 04:25"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="타 동아리 비교 운영 분석 리포트"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생성자: 전영민"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_gravity="end"
                android:layout_marginBottom="32dp" />

            <!-- 동아리 인원 안정성 평가 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동아리 인원 안정성 평가"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="16dp" />

            <!-- 안정성 평가 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ledger_report_green_box"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="●"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="안정"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black" />

                </LinearLayout>

                <!-- 안정성 평가 유지 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="안정성 평가 유지"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="귀신 동아리 활동률이 15% 상승했으며, 특히 '정보보안 활동률'에서 높은 증가율이 나타났습니다. '정보 및 신기술이라는 '정보 및 신기술이라는 수준 '정보보안 정보에서 5%가 기대되니다. 신입 동아리 활동률 시기입니다."
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

            <!-- 성별 분포 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별 분포"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="16dp" />

            <!-- 성별 분포 차트 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- 남성 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👨"
                        android:textSize="40sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남성"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60%(60명)"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

                <!-- 여성 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👩"
                        android:textSize="40sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여성"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40%(40명)"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </LinearLayout>

            <!-- 인원이 가장 많은 Top 3 학과 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원이 가장 많은 Top 3 학과"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="16dp" />

            <!-- TOP 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ledger_report_green_box"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 1"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="컴퓨터학 컴퓨터공학과"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20명(20%)"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- TOP 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ledger_report_yellow_box"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 2"
                    android:textSize="12sp"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="사회과학대학 경영학과"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15명(15%)"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- TOP 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ledger_report_orange_box"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOP 3"
                    android:textSize="12sp"
                    android:textColor="#FF5722"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="인문과학대학 영어영문학과"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11명(11%)"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
