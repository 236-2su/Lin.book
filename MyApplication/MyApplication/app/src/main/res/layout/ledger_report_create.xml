<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ledger_report_gradient_background">

    <!-- 헤더 영역 (ledger_report.xml과 동일) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Hey-Bi 로고 (기존 logo.png 활용) -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="12dp" />

        <!-- 헤더 텍스트 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;짱구네 코딩&quot; AI 비서 "
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey-Bi"
                android:textSize="20sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

    </LinearLayout>

    <!-- 정보 배너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/color_box_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <!-- AI 아이콘 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ai_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Hey-Bi가 우리 동아리를 위한 리포트를 제공합니다!"
            android:textColor="#1976D2"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 스크롤 가능한 컨텐츠 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- AI 분석 리포트 생성 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="AI 분석 리포트 생성"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

            <!-- 생성 시간 안내 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/color_box_light_gray"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏰"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="AI 분석 리포트 생성 요청 시 30~60초 가량 소요됩니다."
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 폼 데이터를 감싸는 카드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_card_blue_border"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <!-- 리포트명 -->
                <TextView
                    style="@style/InfoLabelStyle"
                    android:text="리포트명" />

                <EditText
                    android:id="@+id/et_report_name"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:hint="리포트명을 입력하세요."
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:background="@drawable/ledger_report_rounded_card_box"
                    android:layout_marginBottom="24dp"
                    android:textColorHint="#CCCCCC" />

                <!-- 분석 리포트 종류 -->
                <TextView
                    style="@style/InfoLabelStyle"
                    android:text="분석 리포트 종류" />

                <!-- 드롭다운 스타일 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/ledger_report_rounded_card_box"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="24dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="리포트 분석 종류를 선택하세요."
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                </LinearLayout>

                <!-- 참고 자료 선택 -->
                <TextView
                    style="@style/InfoLabelStyle"
                    android:text="참고 자료 선택" />

                <!-- 버튼 그룹 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <!-- 첫 번째 줄 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <Button
                            android:id="@+id/btn_public_data"
                            style="@style/CategoryFilterButtonStyle"
                            android:text="공지사항"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="src_atop" />

                        <Button
                            android:id="@+id/btn_member_data"
                            style="@style/CategoryFilterButtonStyle"
                            android:text="자유게시판"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="src_atop" />

                        <Button
                            android:id="@+id/btn_gallery_data"
                            style="@style/CategoryFilterButtonStyle"
                            android:text="갤러리방"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="src_atop" />

                    </LinearLayout>

                    <!-- 두 번째 줄 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_ledger_data"
                            style="@style/CategoryFilterButtonStyle"
                            android:text="행사장부"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="src_atop" />

                        <Button
                            android:id="@+id/btn_meeting_data"
                            style="@style/CategoryFilterButtonStyle"
                            android:text="모임통장"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="src_atop" />

                        <Button
                            android:id="@+id/btn_schedule_data"
                            style="@style/CategoryFilterButtonStyle"
                            android:text="구성원목록"
                            android:backgroundTint="@null"
                            android:backgroundTintMode="src_atop" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 분석 시 요청사항 -->
                <TextView
                    style="@style/InfoLabelStyle"
                    android:text="분석 시 요청사항 (선택)" />

                <EditText
                    android:id="@+id/et_request_details"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="분석 시 요청사항을 입력하세요."
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:background="@drawable/ledger_report_rounded_card_box"
                    android:layout_marginBottom="0dp"
                    android:textColorHint="#CCCCCC"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="5" />

            </LinearLayout>

            <!-- 생성하기 버튼 -->
            <Button
                android:id="@+id/btn_create_report"
                style="@style/InfoBoxRegisterButtonStyle"
                android:layout_marginBottom="20dp"
                android:text="생성하기" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>