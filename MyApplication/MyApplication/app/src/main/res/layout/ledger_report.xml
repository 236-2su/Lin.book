<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ledger_report_gradient_background">

    <!-- 헤더 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Hey-Bi 로고 (기존 logo.png 활용) -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            android:layout_marginEnd="12dp" />

        <!-- 헤더 텍스트 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;짱구네 코딩&quot; AI 비서 "
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey-Bi"
                android:textSize="20sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

    </LinearLayout>

    <!-- 정보 배너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/color_box_blue"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- AI 아이콘 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ai_icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hey-Bi가 우리 동아리를 위한 리포트를 제공합니다!"
            android:textSize="14sp"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- 섹션 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:text="AI 분석 리포트 목록"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black" />

    <!-- 리포트 목록 -->
