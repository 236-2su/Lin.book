<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 뒤로가기 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="← 뒤로가기"
            android:textSize="16sp"
            android:textColor="#0064FF"
            android:background="@drawable/info_box"
            android:backgroundTint="#F0F8FF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- 내 동아리 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            style="@style/InfoLabelStyle"
            android:text="내 동아리" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/info_box"
            android:layout_marginTop="8dp"
            android:padding="20dp">

            <!-- 해시태그들 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#분위기가좋은"
                    android:textSize="14sp"
                    android:textColor="#0064FF"
                    android:background="#F0F8FF"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#동아리실이 편한"
                    android:textSize="14sp"
                    android:textColor="#0064FF"
                    android:background="#F0F8FF"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- 동아리명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="짱구네 코딩"
                style="@style/ExtraBold20Style"
                android:layout_marginBottom="8dp" />

            <!-- 위치 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싸피캠퍼스 학생회관 421호"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- 이미지 영역 (워크스페이스) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_workspace"
                    android:background="@drawable/rounded_image_background"
                    android:scaleType="centerCrop"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 페이지네이션 점들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="center">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_selected"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_unselected"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_unselected" />

        </LinearLayout>

    </LinearLayout>

    <!-- 카테고리 필터 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_all"
                style="@style/CategoryButton.Selected"
                android:text="전체"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_academic"
                style="@style/CategoryButton"
                android:text="학술"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_sports"
                style="@style/CategoryButton"
                android:text="체육"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_volunteer"
                style="@style/CategoryButton"
                android:text="봉사활동"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_art"
                style="@style/CategoryButton"
                android:text="예술" />

        </LinearLayout>

    </LinearLayout>

    <!-- 동아리 카드들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <!-- 첫 번째 동아리 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_box"
            android:layout_marginBottom="16dp"
            android:padding="20dp">

            <!-- 해시태그 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#분위기가 좋은"
                android:textSize="14sp"
                android:textColor="#0064FF"
                android:background="#F0F8FF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="12dp" />

            <!-- 동아리명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방구석 경제"
                style="@style/ExtraBold20Style"
                android:layout_marginBottom="8dp" />

            <!-- 위치 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싸피캠퍼스 학생회관 421호"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- 이미지와 소개 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 텍스트 영역 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 동아리 소개 제목 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_pushpin"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동아리 소개"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 동아리 소개 내용 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_comment"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="경제를 좋아하는 사람이라면 누구나, 함께 생각하고 말하는 힘을 키워보세요!"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 이미지 영역 (3명의 사람들) -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_group_study"
                    android:background="@drawable/rounded_image_background"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

        <!-- 두 번째 동아리 카드 (동일한 구조) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_box"
            android:padding="20dp">

            <!-- 해시태그 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#분위기가 좋은"
                android:textSize="14sp"
                android:textColor="#0064FF"
                android:background="#F0F8FF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="12dp" />

            <!-- 동아리명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방구석 경제"
                style="@style/ExtraBold20Style"
                android:layout_marginBottom="8dp" />

            <!-- 위치 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싸피캠퍼스 학생회관 421호"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- 이미지와 소개 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 텍스트 영역 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 동아리 소개 제목 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_pushpin"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="동아리 소개"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 동아리 소개 내용 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_comment"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="경제를 좋아하는 사람이라면 누구나, 함께 생각하고 말하는 힘을 키워보세요!"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 이미지 영역 (3명의 사람들) -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_group_study"
                    android:background="@drawable/rounded_image_background"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
