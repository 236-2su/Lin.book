{
  "editor.formatOnSave": true,
  "editor.rulers": [120],

  // Python 파일에만 적용
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // 저장 시 import 정리(= isort)
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },

  // (선택) 들여쓰기/개행 통일
  "files.eol": "\n",
  "editor.tabSize": 4,
  "editor.insertSpaces": true
}
